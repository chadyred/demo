<section class="pageBottom">
    <div class="container">
        <div class="row">
            <div class="col-xs-4">
                <p  class="text-center">
                    <a class="btn btn-default" role="button" href="{{ "{{ path('" ~ route_name_prefix ~ "') }}" }}">
                        Retour à la liste
                    </a>
                </p>
            </div>
{% if ('edit' in actions) and (not hide_edit) %}
            <div class="col-xs-4">
                <p class="text-center">
                    <a class="btn btn-default" role="button" href="{{ "{{ path('" ~ route_name_prefix ~ "_edit', { 'id': entity.id }) }}" }}">
                        Éditer
                    </a>
                </p>
            </div>
{% endif %}
{% if ('delete' in actions) and (not hide_delete) %}
            <div class="col-xs-4">{{ '{{ form(delete_form) }}' }}</div>
{% endif %}
        </div>
    </div>
</section>
