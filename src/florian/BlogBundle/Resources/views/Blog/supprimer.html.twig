{# src/florian/BlogBundle/Resources/views/Blog/supprimer.html.twig #}

{% extends "florianBlogBundle::layout.html.twig" %}

{% block title %}
    Supprimer un article - {{ parent() }}
{% endblock %}

{% block corps_blog %}

    <h2>Supprimer un article</h2>

    <p>
        Etes-vous certain de vouloir supprimer l'article "{{ article.titre }}" ?
    </p>

    {# On met le slug titre qui est unique de l'article dans la route de l'action du formulaire #}
    <form action="{{ path('florian_blog_supprimer', {'slugTitre': article.slugTitre}) }}" method="post">
        <a href="{{ path('florian_blog_voir_article', {'slugTitre': article.slugTitre}) }}" class="btn">
            <i class="icon-chevron-left"></i>
            Retour Ã  l'article
        </a>
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        {{ form_rest(form) }}
    </form>

{% endblock corps_blog %}